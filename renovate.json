{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":semanticCommitTypeAll(chore)",
        "helpers:pinGitHubActionDigests"
    ],
    "rebaseWhen": "conflicted",
    "labels": [
        "dependencies"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchDepTypes": [
                "action"
            ],
            "matchUpdateTypes": [
                "digest"
            ],
            "automerge": true,
            "automergeType": "branch"
        }
    ]
}
